// Looping Arrays, Breaking and Continuing
const jatin = [
  'Jatin',
  'Sharma',
  2037 - 1991,
  'teacher',
  ['Michael', 'Peter', 'Steven'],
  true
];
const types = [];
// console.log(jatin[0])
// console.log(jatin[1])
// ...
// console.log(jatin[4])
// jatin[5] does NOT exist
for (let i = 0; i < jatin.length; i++) {
  // Reading from jatin array
  console.log(jatin[i], typeof jatin[i]);
  // Filling types array
  // types[i] = typeof jatin[i];
  types.push(typeof  jatin [i]);
}
console.log(types);
const years = [1991, 2007, 1969, 2020];
const ages = [];
for (let i = 0; i < years.length; i++) {
  ages.push(2037 - years[i]);
}
console.log(ages);
// continue and break
console.log('--- ONLY STRINGS ---')
for (let i = 0; i <  jatin.length; i++) {
  if (typeof  jatin[i] !== 'string') continue;
  console.log( jatin[i], typeof  jatin[i]);
}
console.log('--- BREAK WITH NUMBER ---')
for (let i = 0; i <  jatin.length; i++) {
  if (typeof  jatin[i] === 'number') break;
  console.log( jatin[i], typeof jatin[i]);
}
